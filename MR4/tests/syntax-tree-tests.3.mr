test test-expression-in-func()
  test-code(user "x := 3", user "Variable(x) = Int(3)")
  test-code(user "user String str", user "Access(1) String str")
  test-code(
      user "var Int x(y + 5)", user "Access(3) Int x (Variable(y) + Int(5))")
  test-code(user "do\n    var Int x", user "do {\n    Access(3) Int x\n  }")
  test-code(user "\n  \n    \n\n  var Int x", user "Access(3) Int x")
